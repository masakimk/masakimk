<h1>マイページ</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>



<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.tweets.each do |t| %>
  <%= t.user.name %>
  <%= t.genre %>
  <%= t.about %>
  
  <%= t.created_at  %>
  <%= link_to t.movie_url.to_s do %>
    <%= (t.movie.to_s) %>
   <% end %>
  </p>
<% end %>

<!-- 以下はいいね機能を実装している場合-->
<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.liked_tweets.each do |t| %>
  <%= t.user.name %>
  <%= t.genre %>
  <%= t.about %>
  
  <%= t.created_at  %>

  <%= link_to t.movie_url.to_s do %>
    <%= (t.movie.to_s) %>
   <% end %>
  </p>
<% end %>
